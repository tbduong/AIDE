<div style="height:15%; width:100%; clear:both;"></div>
<% @specialty.caregivers.each do |c| %>
<div class="row" summary="These are all the caregivers available for this specialty">
    <div class="large-12 small-11 columns">
        <div class="callout large">
            <div class="large-3 small-12 text-center columns">
                <%= image_tag(c.file) %>
            </div>
            <strong>
                <div class="text-center">
                    <h3>
                        <%= c.user.first_name %>
                        <%= c.user.last_name %>
                        <h3></strong>
                    </div>
                    <h4>
                        <strong>Experience:
                        </strong><%= c.experience %></h4>
                    <h4>
                        <strong>Credentials:
                        </strong><%= c.credentials %></h4>
                </div>
            </div>
        </div>
        <% end %>
        <br/>
        <strong><h5><%= link_to "All Specialties", specialties_path, class: "links" %><h5></strong>
