<h1 class="text-center"> Caregiver Directory </h1>

<div class="row">
  <div class="large-10 columns">
    <div class="panel callout radius filter">
    <label><strong><h3 class="text-center">Filter</h3></strong></label>
      <p class="text-center">
        Check your specific care needs.
      </p>
    <input id="checkbox1" type="checkbox"><label for="checkbox1">Alzheimer's & Dementia</label>
    <input id="checkbox1" type="checkbox"><label for="checkbox1">Orthopedic</label>
    <input id="checkbox2" type="checkbox"><label for="checkbox2">Wound Care</label>
    <input id="checkbox1" type="checkbox"><label for="checkbox1">Oncology Care</label>
    <br>
    <input id="checkbox2" type="checkbox"><label for="checkbox2">Geriatric Care</label>
    <input id="checkbox2" type="checkbox"><label for="checkbox2">Pediatric Care</label>
    <input id="checkbox1" type="checkbox"><label for="checkbox1">Post Surgical</label>
    <input id="checkbox2" type="checkbox"><label for="checkbox2">Neurological Care</label>
    </div>
  </div>
</div>
<div class="large-2 columns filter-button">
  <a href="#" class="button expanded large">Search</a>
</div>

<% @caregivers.each do |caregiver| %>
<div class="row">
  <div class="large-12 small-6 columns">
    <div class="callout large">
      <div class="large-3 small-2 columns">
          <%= image_tag(caregiver.file) %>
      </div>
      <strong><h4> <%= caregiver.user.first_name %><%= caregiver.user.last_name %> <h4></strong>
      <h6><strong>Email: </strong><%= caregiver.user.email %></h6>
      <h6><strong>Location: </strong><%= caregiver.location %></h6>
      <h6><strong>Experience: </strong><%= caregiver.experience %></h6>
      <h6><strong>Credentials: </strong><%= caregiver.credentials %></h6>
      <a href="#"><h6>Learn more about <%= link_to "#{caregiver.user.first_name} #{caregiver.user.last_name}", caregiver_path(caregiver) %><h6></a>
    </div>
  </div>
</div>
<% end %>
<br/>
