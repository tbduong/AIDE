<h1>Log In</h1>

<div class="form_for">
    <%= form_for @user, url: "/login", method: "post" do |f| %>
    <div>
      <%= f.text_field :email, placeholder: "Email" %>
    </div>
    <div>
      <%= f.password_field :password, placeholder: "Password" %>
    </div>
    <div>
      <%= f.submit "Log In", :class => 'waves-effect waves-light btn login'%>
    </div>
    <% end %>
  </div>
